<h1>Order Info:</h1>

<div class="row">
  <div class="col-md-4">
     <div class="well">
        <h2>Product Name: <%= @order.product.name %></h2>
        <h3>Order Quantity: <%= @order.quantity %></h3>
        <%= image_tag @order.product.images.first.image_link %>
        <p>Order ID: <%= @order.id %></p>
        <p>Product ID: <%= @order.product_id %></p>
        <p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>
        <p>Tax: <%= number_to_currency(@order.tax) %></p>
        <p>Total: <%= number_to_currency(@order.total) %></p>
        <p>Email: <%= current_user.email %></p>
      </div>
    </div>
  </div>
</div>