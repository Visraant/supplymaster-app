<h1>Add a new product</h1>
<%= form_tag('/products', {:method => :post}) do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :stock_status%>
    <%= text_field_tag :stock_status, nil, class: "form-control" %>
  </div>
 <div class="form-group">
    <%= label_tag :delivery_time %>
    <%= text_field_tag :delivery_time, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Add product", class: "btn btn-default"%>
  </div>
<% end %>
