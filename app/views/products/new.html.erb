<h1>Add a new product</h1>
<%= form_tag('/products', {:method => :post}) do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= label_tag :stock_status%>
    <%= text_field_tag :stock_status %>
  </div>
 <div>
    <%= label_tag :delivery_time %>
    <%= text_field_tag :delivery_time %>
  </div>
  <div>
    <%= submit_tag "Add product" %>
  </div>
<% end %>
