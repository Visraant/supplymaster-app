<h1>Edit a product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price%>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description %>
  </div>
  <div>
    <%= label_tag :stock_status%>
    <%= text_field_tag :stock_status, @product.stock_status %>
  </div>
 <div>
    <%= label_tag :delivery_time %>
    <%= text_field_tag :delivery_time, @product.delivery_time %>
  </div>
  <div>
    <%= submit_tag "Edit product" %>
  </div>
<% end %>
