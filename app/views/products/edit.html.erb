<% if current_user && current_user.admin %>
<h1>Edit a product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, @product.image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @product.description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :stock_status%>
    <%= text_field_tag :stock_status, @product.stock_status, class: "form-control" %>
  </div>
 <div class="form-group">
    <%= label_tag :delivery_time %>
    <%= text_field_tag :delivery_time, @product.delivery_time, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Edit product", class: "btn btn-default" %>
  </div>
<% end %>
<% end %>
